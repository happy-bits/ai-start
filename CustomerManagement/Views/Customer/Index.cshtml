@model IEnumerable<CustomerManagement.Models.Customer>

@{
    ViewData["Title"] = "Kunder";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Kunder</h2>
    <a asp-action="Create" class="btn btn-primary">Skapa ny kund</a>
</div>

<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Namn</th>
                            <th>E-post</th>
                            <th>Telefon</th>
                            <th>Stad</th>
                            <th>Skapad</th>
                            @if (User.IsInRole("Admin"))
                            {
                                <th>Skapad av</th>
                            }
                            <th>Åtgärder</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var customer in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@customer.FirstName @customer.LastName</strong>
                                </td>
                                <td>
                                    <a href="mailto:@customer.Email">@customer.Email</a>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(customer.Phone))
                                    {
                                        <a href="tel:@customer.Phone">@customer.Phone</a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(customer.City))
                                    {
                                        @customer.City
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    <small class="text-muted">@customer.CreatedAt.ToString("yyyy-MM-dd")</small>
                                </td>
                                @if (User.IsInRole("Admin"))
                                {
                                    <td>
                                        @if (customer.User != null)
                                        {
                                            <span class="badge bg-info">@customer.User.FirstName @customer.User.LastName</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                }
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@customer.Id" 
                                           class="btn btn-sm btn-outline-primary" title="Visa detaljer">
                                            <i class="bi bi-eye"></i> Visa
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@customer.Id" 
                                           class="btn btn-sm btn-outline-warning" title="Redigera">
                                            <i class="bi bi-pencil"></i> Redigera
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@customer.Id" 
                                           class="btn btn-sm btn-outline-danger" title="Ta bort">
                                            <i class="bi bi-trash"></i> Ta bort
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <div class="mb-4">
                    <i class="bi bi-people display-1 text-muted"></i>
                </div>
                <h4 class="text-muted">Inga kunder hittades</h4>
                <p class="text-muted mb-4">Du har inte skapat några kunder än. Klicka på knappen nedan för att skapa din första kund.</p>
                <a asp-action="Create" class="btn btn-primary btn-lg">
                    <i class="bi bi-plus-circle"></i> Skapa första kunden
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Lägg till bekräftelse för borttagning
        document.addEventListener('DOMContentLoaded', function() {
            const deleteLinks = document.querySelectorAll('a[href*="Delete"]');
            deleteLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    if (!confirm('Är du säker på att du vill ta bort denna kund? Denna åtgärd kan inte ångras.')) {
                        e.preventDefault();
                    }
                });
            });
        });
    </script>
}
