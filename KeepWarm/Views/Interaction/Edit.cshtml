@model KeepWarm.Controllers.ViewModels.InteractionEditViewModel

@{
    ViewData["Title"] = "Redigera interaktion";
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4 class="mb-0">Redigera interaktion</h4>
                <a asp-controller="Customer" asp-action="Details" asp-route-id="@Model.CustomerId" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Tillbaka
                </a>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <input asp-for="Id" type="hidden" />
                    <input asp-for="CustomerId" type="hidden" />
                    
                    <div class="form-group mb-3">
                        <label asp-for="InteractionType" class="form-label">Interaktionstyp *</label>
                        <select asp-for="InteractionType" class="form-select" required>
                            <option value="">Välj interaktionstyp</option>
                            @foreach (var type in Model.AvailableInteractionTypes)
                            {
                                <option value="@type">@type</option>
                            }
                        </select>
                        <span asp-validation-for="InteractionType" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="Description" class="form-label">Beskrivning *</label>
                        <textarea asp-for="Description" class="form-control" rows="4" maxlength="500" required></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                        <small class="form-text text-muted">Max 500 tecken</small>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="InteractionDate" class="form-label">Datum *</label>
                        <input asp-for="InteractionDate" type="datetime-local" class="form-control" required />
                        <span asp-validation-for="InteractionDate" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-pencil"></i> Uppdatera interaktion
                        </button>
                        <a asp-controller="Customer" asp-action="Details" asp-route-id="@Model.CustomerId" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Avbryt
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Hjälp</h5>
            </div>
            <div class="card-body">
                <p class="text-muted">
                    <strong>Interaktionstyp:</strong> Välj den typ av kontakt du hade med kunden.
                </p>
                <p class="text-muted">
                    <strong>Beskrivning:</strong> Beskriv kortfattat vad som diskuterades eller hände under interaktionen.
                </p>
                <p class="text-muted">
                    <strong>Datum:</strong> Ange när interaktionen ägde rum.
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
